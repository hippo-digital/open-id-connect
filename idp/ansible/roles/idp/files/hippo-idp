server {
    listen 443;
    server_name login.hippo.digital;

    ssl on;
    ssl_certificate /home/idpservice/login.hippo.digital.pem;
    ssl_certificate_key /home/idpservice/login.hippo.digital.key;

    location / {
        include uwsgi_params;
        uwsgi_pass unix:/var/idp/hippo-idp.sock;
    }
}